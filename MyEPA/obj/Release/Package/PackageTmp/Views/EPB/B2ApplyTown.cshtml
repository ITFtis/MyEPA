
@{
    Layout = "~/Views/_Layout.cshtml";
}

<h4>請求支援</h4>

@{Html.RenderPartial("~/Views/Components/JSforB1c17.cshtml");}
@Html.ActionLink("返回", "B2", "EPBxApply", "", new { @class = "btn btn-primary fa fa-arrow-circle-left", @style = "color:white;padding:4px" })
@using (Html.BeginForm("B2Apply", "EPBxApply"))
{
    <br />
    <br />
    <h6>災害編號： @Html.TextBox("DiasterId", (string)ViewBag.DiasterId, new { @readonly = "readonly", style = "border:none" })</h6>
    <h6>災害名稱： @Html.TextBox("DiasterName", (string)ViewBag.DiasterName, new { @readonly = "readonly", style = "border:none" })</h6>
    <h6>目前正在進行：請求支援</h6>

    <h6>
    <span>鄉鎮市名稱：</span> @Html.DropDownList("Town", new List<SelectListItem>
    {
    new SelectListItem{Text = "請選擇",Value = "未填",Selected=true}
    })
    </h6>
    <span>災區狀況說明：</span>
    <br />
    @Html.TextArea("DiasterTownDescribe", (string)ViewBag.DiasterTownDescribe, new { @style = "width:400px;height:100px" })
    <br />
    <br />
    <input type="submit" class="btn btn-danger" style="margin:10px" value="下一步" />
}
