
<font size="3">
    <table class="table table-bordered table-striped">
        <tr>
            <th class="text-center">
                @Html.ActionLink("新增", "Register", "CleanerxUser", new { }, new { @class = "btn btn-danger", style = "padding:0px" })
            </th>
            <th>機關類別(角色)</th>
            <th>機關名稱(縣市)</th>
            <th>單位名稱(鄉鎮市區)</th>
            <th>姓名</th>
            <th>人員類別</th>
        </tr>
        @foreach (var Item in ViewBag.Data)
        {
        <tr>
            <td style="text-align:center">
                <button class="btn btn-primary" style="padding:0px;" onclick="PickItemForEdit('@Item.Id','@Item.Name','@Item.City','@Item.Town','@Item.MobilePhone','@Item.HumanType','@Item.MainContacter','@Item.ReportPriority','@Item.Duty','@Item.Pwd','@Item.VoicePwd')">修改</button>
                <button class="btn btn-warning" style="padding:0px;" onclick="PickItemForDelete('@Item.Id','@Item.Name','@Item.Duty','@Item.City')">刪除</button>

            </td>
            <td>@Item.Duty</td>
            <td>@Item.City</td>
            <td>@Item.Town</td>
            <td>@Item.Name</td>
            <td>@Item.HumanType</td>
        </tr>
        }
    </table>
    <br /><br />
</font>
