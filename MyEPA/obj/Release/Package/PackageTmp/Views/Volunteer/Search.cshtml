@model IEnumerable<MyEPA.Models.VolunteerModel>

@{
    ViewBag.Title = "民間志工服務表";
    Layout = "~/Views/_Layout.cshtml";
}
    <p>
        @Html.ActionLink("回資源通報首頁", "Index", "ResourcesReport", new { }, new { @class = "btn btn-success" })
    </p>
<table class="table">
    
     <tr>
         <th colspan="8" style="text-align:center;color:red;">
             民間志工服務表
