@model IEnumerable<MyEPA.Models.ToiletModel>
@using MyEPA.Models;
@using MyEPA.Extensions;
@{
    ViewBag.Title = "流動廁所";
    Layout = "~/Views/_Layout.cshtml";
    List<ToiletReportModel> summary = ViewBag.Summary;
}
    <p>
        @Html.ActionLink("回資源通報首頁", "Index", "ResourcesReport", new { }, new { @class = "btn btn-success" })
    </p>
<table class="table-sm table-bordered">
    <thead class="thead-dark">
        <tr>
            <th colspan="6" style="text-align:center;color:red;">
                流動廁所
            </th>
        </tr>
    </thead>
    <tr>
        <th>
            @(ExtensionOfAttribute.GetPropertyDisplayName<ToiletReportModel>(e => e.Town))
        </th>
        <th>
            @(ExtensionOfAttribute.GetPropertyDisplayName<ToiletReportModel>(e => e.ContactUnit))
        </th>
        <th>
            @(ExtensionOfAttribute.GetPropertyDisplayName<ToiletReportModel>(e => e.Count))
        </th>
        <th>
            @(ExtensionOfAttribute.GetPropertyDisplayName<ToiletReportModel>(e => e.Amount))
        </th>
        <th>
            @(ExtensionOfAttribute.GetPropertyDisplayName<ToiletReportModel>(e => e.ROCyear))
        </th>
        <th>
            @(ExtensionOfAttribute.GetPropertyDisplayName<ToiletReportModel>(e => e.UpdateTime))
        </th>
    </tr>
    @foreach (var item in summary)
    {
        <tr>
            <td>
                @item.Town
            </td>
            <td>
                @item.ContactUnit
            </td>
            <td>
                @item.Count
            </td>
            <td>
                @item.Amount
            </td>
            <td>
                @item.ROCyear
            </td>
            <td>
                @item.UpdateTime
            </td>
        </tr>
    }
</table>
