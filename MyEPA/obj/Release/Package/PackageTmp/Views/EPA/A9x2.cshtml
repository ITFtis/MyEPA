@{
    Layout = "~/Views/_Layout.cshtml";
    ViewBag.Title = "災害預警區設定";
}

<div class="text-left">
    <br />
    <h3>@ViewBag.Title</h3>
    <br />
</div>

<div id="PickArea" style="display:none">
    <br />災害：
    <h4 id="DiasterName"></h4>
    @using (Html.BeginForm("A9x2Browse", "EPAxDiaster"))
    {
        @Html.TextBox("DiasterNameForBrowse", "", new { @style = "width:0px;height:0px;background-color:gray" })
        <input type="submit" class="btn btn-info" value="查閱警戒縣市" />

    }
    @using (Html.BeginForm("A9x2Set", "EPAxDiaster"))
    {
        @Html.TextBox("DiasterNameForSet", "", new { @style = "width:0px;height:0px;background-color:gray" })
        <input type="submit" class="btn btn-danger" value="設定警戒縣市" />
    }

    <br /><br />
</div>


<div id="DataArea">
    @{Html.RenderPartial("~/Views/Components/ShowDiasterForWarning.cshtml");}
</div>

<script>
    function PickItemShowWarningArea(Id, DiasterName) {
        $("#PickArea").show();
        $("#Id").val(Id);
        $("#DiasterNameForBrowse").val(DiasterName);
        $("#DiasterNameForSet").val(DiasterName);
        $("#DiasterName").html(DiasterName);
    }
</script>