@model IEnumerable<MyEPA.Models.VehicleModel>
@using MyEPA.Models;
@using MyEPA.Extensions;
@{
    ViewBag.Title = "環境清潔車輛統計";
    Layout = "~/Views/_Layout.cshtml";
    List<VehicleReportModel> summary = ViewBag.Summary;
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="container-fluid">
                <h3><i class="glyphicon glyphicon-circle-arrow-right"></i>&nbsp;@ViewBag.Title</h3>
                <br />
                <p class="right" <a href="#" onclick="history.go(-1)" class="btn btn-success">返回上一頁</a></p>
                <hr />
                <br />
                <h3 class="center">車輛設備明細表</h3>
                <br />
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th colspan="4" style="text-align:center;">
                                車輛設備(摘要表)
                            </th>
                        </tr>
                    </thead>
                    <tr>
                        <th>
                            @(ExtensionOfAttribute.GetPropertyDisplayName<VehicleReportModel>(e => e.VehicleType))
                        </th>
                        <th>
                            @(ExtensionOfAttribute.GetPropertyDisplayName<VehicleReportModel>(e => e.VehicleQuantity))
                        </th>
                        @*
                        <th>
                            @(ExtensionOfAttribute.GetPropertyDisplayName<VehicleReportModel>(e => e.Load))
                        </th>
                        <th>
                            @(ExtensionOfAttribute.GetPropertyDisplayName<VehicleReportModel>(e => e.EnginePower))
                        </th>*@
                    </tr>
                    @foreach (var item in summary)
        {
            <tr>
                <td>
                    @item.VehicleType
                </td>
                <td>
                    @item.VehicleQuantity
                </td>
                @*
                <td>
                    @item.Load
                </td>
                <td>
                    @item.EnginePower
                </td>*@
            </tr>
}
                </table>
                <br />
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th colspan="17" style="text-align:center;">
                                    車輛設備
                                </th>
                            </tr>
                        </thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Town)
                            </th>
                            <th class="hidden-sm hidden-xs">
                                @Html.DisplayNameFor(model => model.ContactUnit)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.VehicleName)
                            </th>
                            <th class="visible-lg hidden">
                                @Html.DisplayNameFor(model => model.VehicleType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PlateNumber)
                            </th>
                            <th class="hidden-sm hidden-xs">
                                @Html.DisplayNameFor(model => model.Load)
                            </th>
                            <th class="hidden-sm hidden-xs">
                                @Html.DisplayNameFor(model => model.EnginePower)
                            </th>
                            <th class="visible-lg hidden">
                                @Html.DisplayNameFor(model => model.Purpose)
                            </th>
                            <th class="visible-lg hidden">
                                @Html.DisplayNameFor(model => model.ROCyear)
                            </th>
                            <th  class="visible-lg hidden">
                                @Html.DisplayNameFor(model => model.EPAsubsidy)
                            </th>
                            <th class="visible-lg hidden">
                                @Html.DisplayNameFor(model => model.VehicleState)
                            </th>
                            <th class="visible-lg hidden">
                                @Html.DisplayNameFor(model => model.CrossTownUse)
                            </th>
                            <th class="visible-lg hidden">
                                @Html.DisplayNameFor(model => model.CrossCityUse)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Note)
                            </th>
                            <th class="visible-lg hidden">
                                @Html.DisplayNameFor(model => model.Xpos)
                            </th>
                            <th class="visible-lg hidden">
                                @Html.DisplayNameFor(model => model.Ypos)
                            </th>
                            <th class="visible-lg hidden">
                                @Html.DisplayNameFor(model => model.UpdateTime)
                            </th>
                        </tr>

                        <tbody>
                            @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Town)
                        </td>
                        <td class="hidden-sm hidden-xs">
                            @Html.DisplayFor(modelItem => item.ContactUnit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleName)
                        </td>
                        <td class="visible-lg hidden">
                            @Html.DisplayFor(modelItem => item.VehicleType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlateNumber)
                        </td>
                        <td class="hidden-sm hidden-xs">
                            @item.Load.TryToDecimal().GetValueOrDefault().ToString("f3")
                        </td>
                        <td class="hidden-sm hidden-xs">
                            @Html.DisplayFor(modelItem => item.EnginePower)
                        </td>
                        <td class="visible-lg hidden">
                            @Html.DisplayFor(modelItem => item.Purpose)
                        </td>
                        <td class="visible-lg hidden">
                            @Html.DisplayFor(modelItem => item.ROCyear)
                        </td>
                        <td class="visible-lg hidden">
                            @Html.DisplayFor(modelItem => item.EPAsubsidy)
                        </td>
                        <td  class="visible-lg hidden">
                            @Html.DisplayFor(modelItem => item.VehicleState)
                        </td>
                        <td  class="visible-lg hidden">
                            @Html.DisplayFor(modelItem => item.CrossTownUse)
                        </td>
                        <td  class="visible-lg hidden">
                            @Html.DisplayFor(modelItem => item.CrossCityUse)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                        <td class="visible-lg hidden">
                            @Html.DisplayFor(modelItem => item.Xpos)

                        </td>
                        <td class="visible-lg hidden">
                            @Html.DisplayFor(modelItem => item.Ypos)
                        </td>
                        <td class="visible-lg hidden">
                            @Html.DisplayFor(modelItem => item.UpdateTime)
                        </td>
                    </tr>
    }
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
    </div>
</div>