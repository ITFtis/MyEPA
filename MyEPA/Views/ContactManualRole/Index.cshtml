@model IEnumerable<MyEPA.Models.ContactManualRoleModel>
@using MyEPA.Enums;
@{
    ViewBag.Title = "手冊職務維護";
    Layout = "~/Views/_ContactManualLayout.cshtml";
    ContactManualRoleTypeEnum type = ViewBag.Type;
}
<p>
    @Html.ActionLink("新增", "Edit", new { type }, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>

        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.ActionLink("修改", "Edit", new { type, contactManualRoleId = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
    }

</table>
