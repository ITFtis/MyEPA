@model MyEPA.EmailHelper
@using MyEPA

@{
    ViewBag.Title = "測試Email";
    Layout = "~/Views/_Layout.cshtml";  
}
<link rel="stylesheet" href="~/Content/flatpickr.css">
<link rel="stylesheet" href="~/Content/confirmDate.css">

<h3>
    測試Email

    @{ 
        if (ViewBag.SendMsg != "")
        {
            <script>
                alert('@ViewBag.SendMsg');
            </script>
        }
    }

</h3>

@using (Html.BeginForm("MyAction", "TestMail", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2">
                ToMails(多筆 ','區別) 收件者
            </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.ToMails, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                BCCMails(多筆 ','區別) 密件副本
            </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.BCCMails, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                MailFrom
            </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.MailFrom, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                MailFromName
            </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.MailFromName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                Account
            </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                Password
            </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                MailServer
            </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.MailServer, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                MailPort
            </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.MailPort, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                EnableSSL
            </label>
            <div class="col-md-6">
                @Html.CheckBoxFor(model => model.EnableSSL, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                @*<input type="submit" value="寄發測試信件" class="btn btn-success" />*@

                <button class="btn btn-primary"
                        name="submitButton" type="submit"
                        value="DoSend">
                    寄發測試信件
                </button>
                <button class="btn btn-success"
                        name="submitButton" type="submit"
                        value="DoSave">
                    更新Mail設定值(json)
                </button>

            </div>
        </div>
    </div>
}