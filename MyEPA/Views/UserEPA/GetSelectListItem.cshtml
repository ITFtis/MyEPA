@model IEnumerable<SelectListItem>

@Html.DropDownList("UserId", Model, htmlAttributes: new { @class = "form-control"})
<link href="~/Content/assets/css/select2.min.css" rel="stylesheet" />
<link href="~/Content/assets/css/select2-bootstrap.css" rel="stylesheet" />

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="~/Content/assets/js/select2.min.js"></script>
<script>
    $('#UserId').select2({
        theme: "bootstrap",
        dropdownAutoWidth: true, //選項自動寬度
        width: 'auto' //外表自動寬度
    });
</script>