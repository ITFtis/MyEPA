@model IEnumerable<MyEPA.Models.DisinfectorModel>
@using MyEPA.Models;
@using MyEPA.Extensions;
@{
    ViewBag.Title = "消毒設備(摘要表)";
    Layout = "~/Views/_Layout.cshtml";
    List<DisinfectorReportModel> summary = ViewBag.Summary;
}

<p>
    <a href="#" onclick="history.go(-1)" class="btn btn-success">返回上一頁</a>
</p>
<table class="table-sm table-bordered">
    <thead class="thead-dark">
        <tr>
            <th colspan="2" style="text-align:center;color:red;">
                消毒設備(摘要表)
            </th>
        </tr>
    </thead>
    <tr>
        <th>
            @(ExtensionOfAttribute.GetPropertyDisplayName<DisinfectorReportModel>(e => e.DisinfectInstrument))
        </th>
        <th>
            @(ExtensionOfAttribute.GetPropertyDisplayName<DisinfectorReportModel>(e => e.Quantity))
        </th>
    </tr>
    @foreach (var item in summary)
    {
        <tr>
            <td>
                @item.DisinfectInstrument
            </td>
            <td>
                @item.Quantity
            </td>
        </tr>
    }
</table>

<br />
<table class="table">
    <tr>
        <th colspan="10" style="text-align:center;color:red;">消毒設備</th>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Town)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisinfectInstrument)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Standard)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ROCyear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdateTime)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Town)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisinfectInstrument)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Standard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ROCyear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateTime)
            </td>
        </tr>
    }

</table>