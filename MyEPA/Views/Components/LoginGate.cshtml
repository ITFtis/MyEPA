@*以下是首頁的Login視窗
jumbotron代表超大螢幕
col-12代表永遠在Jumbortion佔寬度100%*@

<section>
    <div class="jumbotron text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="visual-title1">@ViewBag.Title</h1>
                    <p class="visual-title2">Emergency Management Information System</p>
                    <p>
                        <a accesskey="L" href="#login" title="accesskey: login" class="accesskey-login pc" style="color:white"> ::: </a>
                        @Html.ActionLink("由此登入 »", "Login", "Home", new { }, new { @class = "btn btn-primary btn-lg" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
