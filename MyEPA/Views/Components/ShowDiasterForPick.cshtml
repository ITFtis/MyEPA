
<font size="3">
    <table class="table table-bordered table-striped">
        <tr>
            <th class="text-center">
             
            </th>
            <th>災害名稱</th>
            <th>類型</th>
            <th>開始時間</th>
            <th>結束時間</th>
            <th>備註</th>
            <th>災害狀態</th>

        </tr>
        @foreach (var Item in ViewBag.Data)
        {
        <tr>
            <td style="text-align:center">
                <button class="btn btn-success" style="padding:0px" onclick="PickItemForEdit('@Item.Id','@Item.DiasterName','@Item.DiasterType','@Item.StartTime','@Item.EndTime','@Item.Comment','@Item.DiasterState')">選擇</button>
            </td>
            <td>@Item.DiasterName</td>
            <td>@Item.DiasterType</td>
            <td>@Item.StartTime</td>
            <td>@Item.EndTime</td>
            <td>@Item.Comment</td>
            <td class="text-success">@Item.DiasterState</td>
        </tr>
        }
    </table>
    <br /><br />
</font>

