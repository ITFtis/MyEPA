<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <h2> (閥值)消毒設備 </h2>

            <div>
                @using (Html.BeginForm("Index", "LogDisinfector", new { }, FormMethod.Get, new { diasterId = @diasterId }))
                {
                    <table border="0">
                        <tbody>
                            <tr>
                                <td><h5>災害名稱：</h5></td>
                                <td>
                                    @*"*@
                                    <select id="diasterId" name="diasterId" onchange="Redirect('Index','LogDisinfector')">
                                        @foreach (var item in diasters)
                                        {
                                            <option value="@item.Id" @(item.Id == diasterId ? "selected" : string.Empty)>@item.DiasterName</option>
                                        }
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td><h5>閥值：</h5></td>
                                <td>
                                    <select id="selectDDLCt" name="selectDDLCt">
                                        <option value="">請選擇閥值</option>
                                        @foreach (var item in Code.GetDDLCt())
                                        {
                                            <option value="@item.Key" @(item.Key == selectDDLCt ? "selected" : string.Empty)>@item.Value</option>
                                        }
                                    </select>
                                </td>
                            </tr>
                            <tr><td>&nbsp;</td></tr>
                            <tr align="center">
                                <td colspan="2"><button type="submit" class="btn btn-primary" href=""><i class="fa fa-search"></i>&nbsp;查詢</button></td>
                            </tr>
                        </tbody>
                    </table>
                }
                <hr>
            </div>

            <div id="divUpdate" style="display:none">
                <input type="submit" value="更新閥值" class="btn btn-danger align-center" onclick="Update()" />
                <br /><br />
            </div>

            <table class="table">
                <tr>
                    <th>縣市</th>
                    <th>鄉鎮市</th>
                    <th>聯繫單位名稱</th>
                    <th>
                        消毒設備名稱
                        <br />
                        購買年份(民國)
                    </th>
                    <th>數量紀錄</th>
                    <th>閥值</th>
                    <th>閥值建置時間</th>
                    <th>閥值更新人員</th>
                    <th>現有數量</th>
                </tr>
                @foreach (var Item in Model)
                {
                    <tr>
                        <td>@Item.City</td>
                        <td>@Item.Town</td>
                        <td>@Item.ContactUnit</td>
                        <td>
                            @Item.DisinfectInstrument
                            <br />
                            @(!string.IsNullOrEmpty(Item.ROCyear) ? ("(" + Item.ROCyear + ")") : "")
                        </td>
                        <td>@Item.Amount</td>
                        <td>@Item.CtPoint</td>
                        <td>@(DateFormat.ToDate7(Item.LogBDate))</td>
                        <th>@Item.LogBUser</th>
                        <td>
                            @Item.CurAmount
                            <br />
                            @Html.Raw(Item.CurYearDesc)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>

        $(document).ready(function () {

            var CanUpdate = '@CanUpdate'.toLowerCase() == 'true';
            if (CanUpdate) {
                //預設值不給更新
                $('#divUpdate').show()
            }
        });

        function Update() {

            var diasterId = @diasterId;
            var root = "@Url.Content("/LogDisinfector/Update")";

            $.ajax({
                url: root,
                method: 'Post',
                data: { diasterId: diasterId },
                success: function (data) {
                    if (data.IsSuccess) {
                        isChanged = false;
                        alert('閥值更新成功');
                        location.reload();
                    }
                    else {
                        alert('閥值更新失敗,' + data.ErrorMessage);
                    }
                },
                error: function (data) {
                    alert('閥值更新失敗');
                }
            });

        }
    </script>
}