@model IEnumerable<MyEPA.ViewModels.ContactManualSuperviseViewModel>

@{
    ViewBag.Title = "督導業務維護";
    Layout = "~/Views/_ContactManualLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("新增", "Edit", new { }, new { @class = "btn" })
    </p>
    <table class="table">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Describe)
            </th>

        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink("修改", "Edit", new { id=item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Describe)
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
