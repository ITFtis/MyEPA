環境部環境管理署  敬啟";
                }

                <tr>
                    <td style="width:20%">標題</td>
                    <td>@Html.TextBox("Title", @title, new { @Style = "width:70%;height:50px" })</td>
                </tr>
                <tr>
                    <td style="width:20%">
                        收件者Mail(多筆','區分)
                        <br />
                        aa@gmail.com,bb@gmail.com
                    </td>
                    <td>@Html.TextArea("Email", "", new { @Style = "width:70%;height:80px" })</td>
                </tr>
                <tr>
                    <td style="width:20%">內容</td>
                    <td>
                        @Html.TextArea("Content", @content, new { @Style = "width:70%;height:150px" })
                        <br />
                        <input type="submit" class="btn  btn-primary" style="margin:10px" value="發送Email" />
                    </td>
                </tr>
            </table>
        }
    </div>

</font>



