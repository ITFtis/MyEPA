        <input type="submit" class="btn btn-success" style="margin:10px;padding:0px" value="顯示整備內容" />
    }
</div>
<br /><br />
<div id="DataArea">
    @{Html.RenderPartial("~/Views/Components/ShowDiasterForPick.cshtml");}
</div>

<script>
    function PickItemForEdit(x, DiasterName, DiasterType, StartTime, EndTime, Comment, DiasterState)
    {
        $("#ConfirmArea").show();
        $("#DiasterId").val(x);
        $("#DiasterName").val(DiasterName);   
    }
</script>
   