@{
    Layout = "~/Views/_Layout.cshtml";
}

<div class="text-left">
    <br />
    <h5>全國縣市整備確認</h5>
    <br />
</div>
<div id="ConfirmArea" class="text-left" style="padding:0px;display:none">
    <br /> <br />
    @using (Html.BeginForm("LoadTable", "EPAxDefend"))
    {
        <span>災害Id: </span> @Html.TextBox("DiasterId")
        <br />
        <span>災害名稱: </span>@Html.TextBox("DiasterName", "", new { @style = "width:300px" })
