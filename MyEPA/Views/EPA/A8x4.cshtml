@{

    Layout = "~/Views/_Layout.cshtml";
    ViewBag.Title = "單一聯繫窗口查詢";
}
<div class="text-center">
    <br />
    <h3>@ViewBag.Title</h3>
    <br />
</div>

<font size="2">
    <table class="table table-bordered table-striped">
        <tr>
            <th>單位</th>
            <th>地點</th>
            <th>專線</th>
            <th>電話</th>
            <th>傳真</th>
            <th>電郵</th>
        </tr>
        @foreach (var Item in ViewBag.Data)
        {
            <tr>
                <td rowspan="3">@Item.City</td>
                <td>@Item.Place1</td>
                <td>@Item.Line1</td>
                <td>@Item.Phone1</td>
                <td>@Item.Fax1</td>
                <td>@Item.Mail1</td>
            </tr>
            <tr>
                <td>@Item.Place2</td>
                <td>@Item.Line2</td>
                <td>@Item.Phone2</td>
                <td>@Item.Fax2</td>
                <td>@Item.Mail2</td>
            </tr>
            <tr>
                <td>@Item.Place3</td>
                <td>@Item.Line3</td>
                <td>@Item.Phone3</td>
                <td>@Item.Fax3</td>
                <td>@Item.Mail3</td>
            </tr>
        }
    </table>
    <br /><br />
</font>

