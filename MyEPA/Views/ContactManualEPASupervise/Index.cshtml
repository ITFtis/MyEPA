@model IEnumerable<MyEPA.ViewModels.ContactManualViewModel>
@using MyEPA.Enums;
@{
    Layout = "~/Views/_ContactManualLayout.cshtml";
    ContactManualTypeEnum type = ViewBag.Type;
    ViewBag.Title = type.GetDescription();
    int? searchDepartmentId = ViewBag.SearchDepartmentId;
    int departmentCount = ViewBag.DepartmentCount;
}
<style>
    .pdt-10{
        padding-top:10px
    }
    .pdb-10{
        padding-bottom:10px
    }
    .pd-10 {
        padding: 10px
    }
    .pdl-5 {
        padding-left: 5px
    }
    .ml-5{
        margin-left:5px
    }

</style>
<h2>@ViewBag.Title</h2>
<div class="col-12">
    <div class="col-12 pdb-10 pdt-10">
        @using (Html.BeginForm("Index", "ContactManualEPASupervise", FormMethod.Get))
        {
            <div class="col-md-12 pdb-10">
                <label>類別</label>
                @{
                    Html.RenderAction("GetTypeSelectListItem", "ContactManualEPASupervise", new { type = type.ToInteger() });
                }
            </div>
            <div class="col-md-12 pdt-10 pdl-10">
                @if (departmentCount > 0)
                {
                    @Html.ActionLink("新增", "Create", new { type = type.ToInteger() }, new { @class = "btn btn-success" })
                    <button type="submit" class="btn btn-primary ml-5">查詢</button>
                }
            </div>

        }
    </div>
</div>
<div class="col-md-12 pdt-10">
    <table class="table">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobilePhone)
            </th>
            <th>
                責任區
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sort)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="#" onclick="deleteItem(@item.Id)">刪除</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobilePhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sort)
                </td>
            </tr>
        }

    </table>

</div>
<script>
    function deleteItem(id) {
        if (confirm("是否確定要刪除？")) {
            $.ajax({
                url: '@Url.Action("Delete", "ContactManualEPA")',
                type: 'GET',
                data: {
                    Id: id
                },
                success: function (respones) {
                    history.go(0);
                }
            });
        }
    }
</script>
